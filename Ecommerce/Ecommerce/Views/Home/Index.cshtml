@using VentaDeActivos.Web.ViewModels.Home
@model HomeViewModel
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = "Inicio";
}

@section Breadcrumb {
    <li class="active"><strong>@ViewData["Title"]</strong></li>
}

@if (Model.Lots.Count > 0)
{
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 style="padding-bottom: 37px; font-family:'Blippo'; font-size:315%">@SharedLocalizer["Lots"]</h1>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">

            <div class="col-md-3">
            </div>

            <div class="col-md-6">

                @if (Model.Lots.Count == 1)
                {
                    <div class="col-md-12">
                        <div class="row">
                            @foreach (var item in Model.Lots)
                            {
                                <div class="col-md-12 text-center">
                                    <h4>@item.Description</h4>
                                </div>
                                <div class="col-md-12 text-center">
                                    <a asp-controller="Article" asp-action="IndexPublic" asp-route-lotId="@item.LotId" class="btn btn-default btn-sm" title="@SharedLocalizer["ViewArticles"]">
                                        @if (item.Image == null)
                                        {
                                            <img src="~/images/box.png" alt="@SharedLocalizer["Vda"]" style="width: 180px; height:180px;" />
                                        }
                                        else
                                        {
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="image" style="width: 180px; height:180px;" />
                                        }
                                    </a>
                                </div>
                            }
                        </div>
                        <br />
                    </div>
                }
                else
                {
                    @foreach (var item in Model.Lots)
                    {
                        <div class="col-md-6">
                            <div class="row">

                                <div class="col-md-12 text-center">
                                    <h4>@item.Description</h4>
                                </div>
                                <div class="col-md-12 text-center">
                                    <a asp-controller="Article" asp-action="IndexPublic" asp-route-lotId="@item.LotId" class="btn btn-default btn-xs" title="@SharedLocalizer["ViewArticles"]">
                                        @if (item.Image == null)
                                        {
                                            <img src="~/images/box.png" alt="@SharedLocalizer["Vda"]" style="width: 180px; height:180px;" />
                                            <br />
                                        }
                                        else
                                        {
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="image" style="width: 180px; height:180px;" />
                                        }
                                    </a>
                                </div>
                            </div>
                            <br />
                        </div>
                    }
                }

            </div>

            <div class="col-md-3">
            </div>

        </div>
    </div>

}
else
{
    <div class="row">
        <div class="col-md-12 text-center">
            <i class="fas fa-box-open fa-5x" style="color:#00A3A1"></i>
            <h2 style="padding-bottom: 37px; font-family:'Blippo'; font-size:295%">@SharedLocalizer["No_Lots_Availables"]</h2>
        </div>
    </div>
}
