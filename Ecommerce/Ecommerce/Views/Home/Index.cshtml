@using Ecommerce.ViewModels.Home
@model HomeViewModel


@{
    ViewData["Title"] = "Home";
}

@section scripts{
    <script src="~/js/Home/Index.js"></script>
}


@section Breadcrumb {
    <li class="active" style="padding-left:1px"><strong>@ViewData["Title"]</strong></li>
}

<link rel="stylesheet" type="text/css" href="~/css/home.css">

<div class="home_img">



    @if (Model.Lots.Count > 0)
    {
        <div class="col-md-12 text-center">
            <h1 style="color:#e7e9f3;font-weight:900;font-family:'Open Sans',Helvetica,Arial,Lucida,sans-serif; font-size:51px">Lotes</h1>
        </div>



        <div class="container" style="padding-top:250px;">
            <div class="row portfolio" style="display:flex;flex-wrap:wrap;justify-content:space-between">


                <div class="owl-carousel owl-theme">

                    @if (Model.Lots.Count == 1)
                    {


                        @foreach (var item in Model.Lots)
                        {

                            if (item.Imagen.Length == 0)
                            {
                                <div class="col-md-9">
                                    <div class="ibox">
                                        <div class="ibox-content product-box">
                                            <div class="product-imitation">
                                                [ SIN FOTO ]
                                            </div>
                                            <div class="product-desc">
                                                <span class="product-price">
                                                    @item.Articulos.Count
                                                </span>
                                                <a class="product-name classTxt">@item.Descripcion</a>
                                                <div class="m-t text-righ">
                                                    <a asp-controller="Article" asp-action="IndexPublic" asp-route-LotId="@item.Id" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                    }
                                    else
                                    {
                                    <div class="col-md-9" >
                                        <div class="ibox">
                                            <div class="ibox-content product-box">
                                                <div class="product-imitation">
                                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Imagen)" alt="image" style="width:198px;height:205px;padding-bottom:25px;margin-top:-90px;left:15px;padding-right:9px;position:absolute"/>
                                                </div>
                                                <div class="product-desc" style="padding-top:40px">
                                                    <span class="product-price">
                                                        @item.Articulos.Count
                                                    </span>
                                                    <a class="product-name classTxt">@item.Descripcion</a>
                                                    <div class="m-t text-righ">
                                                        <a asp-controller="Article" asp-action="IndexPublic" asp-route-LotId="@item.Id" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    }
                           


                                    }
                                    }

                                    else
                                    {
                                    @foreach (var item in Model.Lots)
                                    {

                                        if (item.Imagen.Length == 0)
                                        {

                                            <div class="col-md-9">
                                                <div class="ibox">
                                                    <div class="ibox-content product-box">
                                                        <div class="product-imitation">
                                                            [ SIN FOTO ]
                                                        </div>
                                                        <div class="product-desc">
                                                            <span class="product-price">
                                                                @item.Articulos.Count
                                                            </span>
                                                            <a class="product-name classTxt">@item.Descripcion</a>
                                                            <div class="m-t text-righ">
                                                                <a asp-controller="Article" asp-action="IndexPublic" asp-route-LotId="@item.Id" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {

                                            <div class="col-md-9">
                                                <div class="ibox">
                                                    <div class="ibox-content product-box">
                                                        <div class="product-imitation">
                                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Imagen)" alt="image" style="width:198px;height:205px;padding-bottom:25px;margin-top:-90px;left:15px;padding-right:9px;position:absolute" />
                                                        </div>
                                                        <div class="product-desc" style="padding-top:40px">
                                                            <span class="product-price">
                                                                @item.Articulos.Count
                                                            </span>
                                                            <a class="product-name classTxt">@item.Descripcion</a>
                                                            <div class="m-t text-righ">
                                                                <a asp-controller="Article" asp-action="IndexPublic" asp-route-LotId="@item.Id" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        

                                    }

                                    }
                                </div>
                            </div>
        </div>
    }
    else
    {
        <div class="col-md-12 text-center" style="padding-top: 12px;">
            <i class="fas fa-box-open fa-5x" style="color:#e7e9f3"></i>
            <h2 style="color:#e7e9f3;font-weight:900;font-family:'Open Sans',Helvetica,Arial,Lucida,sans-serif; font-size:51px">No hay lotes disponibles</h2>
        </div>
    }
</div>



<style>



    .home_img {
        margin-left: -62px;
        width: 1265px;
        margin-top: -2rem;
        margin-bottom: -29rem;
        position: relative;
        height: 105rem;
        background-image: url('images/sq_img_2.jpg');
        background-position: bottom;
    }

        .home_img:before {
            z-index: 0;
            position: absolute;
            content: "";
            top: 0;
            left: 0;
            right: 0;
            bottom: -1px;
            background: rgba(121, 127, 128, 0.7);
        }

        .classTxt {
            word-break: break-all;
        }

</style>
