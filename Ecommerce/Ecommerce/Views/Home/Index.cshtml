@using Ecommerce.ViewModels.Home
@model HomeViewModel


@{
    ViewData["Title"] = "Home";
}

@section Breadcrumb {
    <li class="active" style="padding-left:1px"><strong>@ViewData["Title"]</strong></li>
}

<link rel="stylesheet" type="text/css" href="~/css/home.css">

<div class="home_img">



    @if (Model.Lots.Count > 0)
    {
        <div class="col-md-12 text-center">
            <h1 style="color:#e7e9f3;font-weight:900;font-family:'Open Sans',Helvetica,Arial,Lucida,sans-serif; font-size:51px">Lotes</h1>
        </div>



        <div class="container" style="padding-top:216px;">
            <div class="row portfolio" style="display:flex;flex-wrap:wrap;justify-content:space-between">



                @if (Model.Lots.Count == 1)
                {

                    @foreach (var item in Model.Lots)
                    {

                        if (item.Imagen == null)
                        {
                            <div class="col-md-4" style="padding-left:6%; padding-right:6%; padding-bottom:2%">

                                <div class="ibox">
                                    <div class="ibox-content product-box">
                                        <div class="product-imitation">
                                            [ SIN FOTO ]
                                        </div>
                                        <div class="product-desc">
                                            <span class="product-price">
                                                @item.Articulos.Count
                                            </span>
                                            <a class="product-name">@item.Descripcion</a>
                                            <div class="m-t text-righ">
                                                <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="col-md-4" style="padding-left:6%; padding-right:6%; padding-bottom:2%">
                                <br />
                                <div class="ibox">
                                    <div class="ibox-content product-box">
                                        <div class="product-imitation">
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Imagen)" alt="image" style="width: 180px; height:180px;" />
                                        </div>
                                        <div class="product-desc">
                                            <span class="product-price">
                                                @item.Articulos.Count
                                            </span>
                                            <a class="product-name">@item.Descripcion</a>
                                            <div class="m-t text-righ">
                                                <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }



                    }
                }


                else
                {
                    @foreach (var item in Model.Lots)
                    {

                        if (item.Imagen == null)
                        {

                            <div class="col-md-4" style="padding-right:6%; padding-left:6%; padding-bottom:2%">

                                <div class="ibox">
                                    <div class="ibox-content product-box">
                                        <div class="product-imitation">
                                            [ SIN FOTO ]
                                        </div>
                                        <div class="product-desc">
                                            <span class="product-price">
                                                @item.Articulos.Count
                                            </span>
                                            <a class="product-name">@item.Descripcion</a>
                                            <div class="m-t text-righ">
                                                <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {

                            <div class="col-md-4" style="padding-left:6%; padding-right:6%; padding-bottom:2%">

                                <div class="ibox">
                                    <div class="ibox-content product-box">
                                        <div class="product-imitation">
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Imagen)" alt="image" style="width: 180px; height:180px;"/>
                                        </div>
                                        <div class="product-desc">
                                            <span class="product-price">
                                                @item.Articulos.Count
                                            </span>
                                            <a class="product-name">@item.Descripcion</a>
                                            <div class="m-t text-righ">
                                                <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i class="fas fa-long-arrow-alt-right"></i> </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <br />

                    }
                    <div class="col-md-4">
                    </div>

                }
            </div>
        </div>
    }
    else
    {
        <div class="col-md-12 text-center" style="padding-top: 12px;">
            <i class="fas fa-box-open fa-5x" style="color:#e7e9f3"></i>
            <h2 style="color:#e7e9f3;font-weight:900;font-family:'Open Sans',Helvetica,Arial,Lucida,sans-serif; font-size:51px">No hay lotes disponibles</h2>
        </div>
    }
</div>



<style>


    .home_img {
        margin-left: -62px;
        width: 1265px;
        margin-top: -2rem;
        margin-bottom: -29rem;
        position: relative;
        height: 105rem;
        background-image: url('images/sq_img_2.jpg');
        background-position: bottom;
    }

        .home_img:before {
            z-index: 0;
            position: absolute;
            content: "";
            top: 0;
            left: 0;
            right: 0;
            bottom: -1px;
            background: rgba(121, 127, 128, 0.7);
        }
</style>
