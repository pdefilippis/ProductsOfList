@{
    ViewData["Title"] = "Admin";
}


@section scripts{
    <script src="~/js/Employee/Admin.js"></script>
    <script src="~/libman/unpkg/datatables.net-buttons-bs/datatables.js"></script>
    <script src="~/libman/unpkg/datatables.net-buttons-bs/datatables.min.js"></script>
}

@section Breadcrumb {
    <li><a asp-action="Index" asp-controller="Home" style="color:#002147">Home</a></li>
    <li class="active"><strong>@ViewData["Title"]</strong></li>
}

<link rel="stylesheet" href="~/css/employee.css" />

<div class="row" style="justify-content:center;display:flex">
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fas fa-check fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span style="font-size:15px"> Artículos aplicados </span>
                    <h2 class="font-bold" style="font-weight: 800">@ViewBag.ArticulosAplicados</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="widget style1 yellow-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fa fa-trophy fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span style="font-size:15px"> Artículos ganados </span>
                    <h2 class="font-bold" style="font-weight: 800">@ViewBag.ArticulosGanados</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="widget style1 lazur-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fas fa-dollar-sign fa-5x"></i>
                </div>
                <div class="col-8 text text-right">
                    <span style="font-size:15px"> Dinero aplicado en compras </span>
                    <h2 class="font-bold" style="font-weight:800;padding-right: 17px;">@ViewBag.DineroGastado</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<table id="employee-table" class="table table-striped table-bordered table-hover table-responsive text-nowrap" style="width:100%"></table>


<div hidden>
    <div id="id-column-title">ID</div>
    <div id="date-column-title">Fecha</div>
    <div id="name-column-title">Nombre lote</div>
    <div id="articleApply-column-title">Articulo aplicado</div>
    <div id="probabilityWinner-column-title">Probabilidad de ganar</div>
    <div id="winner-column-title">Ganador</div>
</div>