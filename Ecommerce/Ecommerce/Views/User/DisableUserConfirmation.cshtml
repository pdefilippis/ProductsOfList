@model Ecommerce.ViewModels.Users.DisableUserConfirmationViewModel


@{
    ViewData["Title"] = "Deshabilitar usuario";
}

@section Breadcrumb {
    <li><a asp-action="Index" style="color:#002147">Usuarios</a></li>
    <li class="active"><strong>@ViewData["Title"]</strong></li>
}

<p style="padding-bottom: 37px; font-family:'Blippo'; font-size:295%; color:#676A6C">¿Está seguro?</p>

<form asp-action="DisableUser" method="post">
    @*<input asp-for="UserId" />*@
    <div class="form-group btn-group">
        <button type="submit" class="btn btn-default" style="background-color:#002147; color:white">Deshactivar</button>
        <a asp-action="Index" class="btn btn-default">Volver</a>
    </div>
</form>