@model Ecommerce.ViewModels.Users.CreateUserViewModel


@{
    ViewData["Title"] = "Crear";
}


@section Breadcrumb {
    <li><a asp-action="Index" style="color:#002147">Usuarios</a></li>
    <li class="active"><strong>@ViewData["Title"]</strong></li>
}

<h2 style="padding-bottom: 37px; font-family:'Blippo'; font-size:295%; color:#676A6C">Nuevo usuario</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>

            <input type="submit" style="background-color:#002147; color:white" value="Crear" class="btn btn-default pull-left" />
            <a asp-action="Index" class="btn btn-default pull-right">Cancelar</a>

        </form>
    </div>
</div>
