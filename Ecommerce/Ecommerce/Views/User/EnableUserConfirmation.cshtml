@model Ecommerce.ViewModels.Users.EnableUserConfirmationViewModel


@{
    ViewData["Title"] = "Habilitar usuario";
}

@section Breadcrumb {
    <li><a asp-action="Index" style="color:#002147">Usuarios</a></li>
    <li class="active"><strong>@ViewData["Title"]</strong></li>
}

<p style="padding-bottom: 37px; text-decoration: underline ;color:#002147; font-family:sans-serif; font-size: 237%">¿Está seguro?</p>

<form asp-action="EnableUser" method="post">
    @*<input asp-for="UserId" />*@
    <div class="form-group btn-group">
        <button type="submit" class="btn btn-primary">Activar</button>
        <a asp-action="Index" class="btn btn-default">Volver</a>
    </div>
</form>
