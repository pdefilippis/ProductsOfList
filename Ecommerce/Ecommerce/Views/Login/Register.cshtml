@model Ecommerce.ViewModels.Login.LoginViewModel


@{
    Layout = null;
}

@{
    ViewData["Title"] = "Register";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Registrarse</title>

    <!-- Icons font CSS-->


    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">



    <!-- Main CSS-->
    <link href="~/css/register.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-image p-t-100 p-b-100 font-robo" style="background-image: url('images/bg-01.jpg');">
        <div class="wrapper wrapper--w680">
            <div class="card card-1">

                <div class="card-body">
                    <h2 class="title">Completá tus datos</h2>
                    <form asp-controller="Login" asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="input-group">
                            <input asp-for="Input.Email" class="input--style-1" type="text" placeholder="E-MAIL">
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input asp-for="Input" class="input--style-1" type="text" placeholder="NOMBRE">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <input asp-for="Input" class="input--style-1" type="text" placeholder="APELLIDO">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input asp-for="Input.User" class="input--style-1" type="text" placeholder="USUARIO">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <input asp-for="Input.Password" class="input--style-1" type="password" placeholder="CONTRASEÑA">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="p-t-20">
                            <button class="btn btn--radius btn--blue">Registrarse</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
