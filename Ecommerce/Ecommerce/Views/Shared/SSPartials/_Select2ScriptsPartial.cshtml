@{ 
    var requestCultureShort = (ViewData["RequestCulture"] as System.Globalization.CultureInfo).TwoLetterISOLanguageName;
}

<environment include="Development">
    <script src="~/libman/cdnjs/select2/js/select2.js"></script>
    <script src=@($"/libman/cdnjs/select2/js/i18n/{requestCultureShort}.js")></script>
</environment>
<environment exclude="Development">
    <script src="~/libman/cdnjs/select2/js/select2.min.js"></script>
    <script src=@($"/libman/cdnjs/select2/js/i18n/{requestCultureShort}.js")></script>
</environment>